<OeeScreen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Equipment Name'
            size_hint: (1, 0.1)

        TextInput:
            id: ti_eq_name
            hint_text: 'Equipment Name'
            size_hint: (1, 0.1)

        Label:
            text: 'Planned Time (hours)'
            size_hint: (1, 0.1)

        TextInput:
            id: ti_planned
            hint_text: 'Planned Time'
            input_filter: 'float'
            size_hint: (1, 0.1)

        Label:
            text: 'Standard Output (units/hour)'
            size_hint: (1, 0.1)

        TextInput:
            id: ti_std_out
            hint_text: 'Standard Output'
            input_filter: 'float'
            size_hint: (1, 0.1)

        Button:
            text: 'Add Equipment'
            size_hint: (1, 0.1)
            on_press: root.add_equipment()

        ScrollView:
            BoxLayout:
                id: equipment_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 5

        Button:
            text: 'Calculate OEE'
            size_hint: (1, 0.1)
            on_press: root.calculate_oee()

        Label:
            id: lbl_oee
            text: 'OEE: --%'
            size_hint: (1, 0.1)
